{% extends 'navfoot.html.twig' %}
{% block navbar %}
    {{ parent() }}

{% block body %}
<h5 class="text-center my-5">Page de connexion</h5>
<div class="container d-flex justify-content-center">

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}



        <!-- ///////////////// ADMIN AFFICHAGE ////////////////-->
        {% if is_granted('ROLE_ADMIN') %}
        <div class="border border-secondary p-5 mb-5 affichage-admin">
            <p class="text-xl-center"> Bonjour Admin, accédez à vos éspaces directement depuis le liens ci-dessous ! </p> 
            <button type="button" class="btn btn-secondary btn-retour">
                <a href="{{path("produitlist")}}" style="color:white;">Afficher la liste des produits</a>
            </button>

            <button type="button" class="btn btn-secondary btn-retour text-white">
                <a href="{{path("new_produit")}}" class="text-white">Ajouter un nouveau produit</a>
            </button>
            
            <button type="button" class="btn btn-secondary btn-retour text-white">
                <a href="{{path("selectionliste")}}" class="text-white">Modifier la selection du moment</a>
            </button>
        </div>
        {% endif %} 
      <!-- ///////////////// CONNECTE ////////////////-->
        {% if app.user %} 
            <div class="border border-secondary p-5 mb-5">           
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}
                </div>
                <button class="btn btn-secondary"><a href="{{ path('app_logout') }}" style="color:white;" >Se déconnecter</a></button>
            </div>     
        {% endif %}
        <!-- ///////////////// FORM CONNEXION ////////////////-->
        <div class="border border-secondary p-5 mb-3">
            <h1 class="h3 mb-3 font-weight-normal">Se Connecter</h1> 
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

           <button class="btn btn-secondary my-3" type="submit">
                Se connecter
            </button>
        </div>
    </form>
</div>
{% endblock %}
{% endblock %} 