{% extends 'navfoot.html.twig' %}
{% block navbar %}
    {{ parent() }}

{% block body %}
<h5 class="text-center my-5">Page de connexion</h5>
<div class="container d-flex justify-content-center">

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        
        {% if app.user %} 
            <div class="border border-secondary p-5 mb-5">           
                <div class="mb-3">
                    Hello, vous êtes connecté en tant que {{ app.user.username }}
                </div>
                <button class="btn btn-secondary"><a href="{{ path('app_logout') }}" style="color:white;" >Se déconnecter</a></button>
            </div>     
        {% endif %}
       
        <div class="border border-secondary p-5 mb-3">
            <h1 class="h3 mb-3 font-weight-normal">Se Connecter</h1> 
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

           <button class="btn btn-secondary my-3" type="submit">
                Se connecter
            </button>

